<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MyController">
    <VBox style="-fx-background-color: #282a36;" prefWidth="200" spacing="10" padding="10">
        <Button text="Home" style="-fx-text-fill: white;" onAction="#showHomePage" />
        <Button text="Courses" style="-fx-text-fill: white;" onAction="#showCoursesPage" />
    </VBox>
    <BorderPane.margin>
        <Insets />
    </BorderPane.margin>
    <BorderPane.center>
        <Label text="Welcome to the Dashboard!" style="-fx-font-size: 24px;" />
    </BorderPane.center>
</BorderPane>
